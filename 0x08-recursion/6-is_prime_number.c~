#include "holberton.h"

int _prime(int n, int m)
{
	if (m < n)
	{
		if (n % m == 0)
			return (0);
		m = _prime(n, m + 1);
	}
	if (m != 0 && n % m == 0)
		return (1);
	return (0);
}
/**
 * main - check the code for Holberton School students.
 *
 * Return: Always 0.
 */
int is_prime_number(int n)
{
	if (n < 1)
		return (0);
	return (_prime(n, 2));
}
